<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:orientation="vertical"
    android:id="@+id/mainContainer">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/header"
        android:background="@color/cardview_shadow_start_color"
        android:layout_height="112dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profilepic"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/profile_icon"
            app:civ_border_width="2dp"
            app:civ_border_color="#FFFFFF"
            android:onClick="LoadNewProfilePhoto"/>
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/profilepic"
            android:paddingTop="24dp"
            android:paddingBottom="2dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="10pt"/>
        <TextView
            app:layout_constraintTop_toBottomOf="@id/name"
            android:id="@+id/email"
            app:layout_constraintLeft_toRightOf="@id/profilepic"
            android:textColor="#FFFFFF"
            android:textSize="6pt"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            app:layout_constraintTop_toBottomOf="@id/email"
            app:layout_constraintLeft_toRightOf="@id/profilepic"
            android:textColor="#FFFFFF"
            android:textSize="6pt"
            android:id="@+id/company"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        app:layout_constraintBottom_toBottomOf="@id/header"
        android:id="@+id/education"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:layout_marginLeft="10dp"
        android:weightSum="4">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Education: "
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:id="@+id/user_education"
            android:layout_height="wrap_content"
            android:layout_weight="3" />
    </LinearLayout>
    <LinearLayout
        app:layout_constraintBottom_toBottomOf="@id/education"
        android:id="@+id/employment"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:paddingBottom="8dp"
        android:weightSum="4">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Employment: "
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/user_employment_details"
            android:layout_weight="3" />
    </LinearLayout>
    <LinearLayout
        app:layout_constraintBottom_toBottomOf="@id/employment"
        android:visibility="gone"
        android:id="@+id/hobbies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:weightSum="4">
        <TextView
            android:id="@+id/edittxtview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hobbies: "
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/user_hobbies"
            android:layout_weight="3" />
    </LinearLayout>
</LinearLayout>